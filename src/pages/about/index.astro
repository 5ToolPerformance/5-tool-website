---
import Layout from "../../layouts/Layout.astro";
import { loadQuery } from "../../lib/load-query";
import { urlForImage } from "../../lib/urlForImage";
import type { ImageType } from "../../lib/types";
import CoachCarousel from "../../components/CoachCarousel.astro";
import { getAllCoaches } from "../../lib/coachesHelper";
import ServicesCard from "../../components/cards/ServicesCard.astro";
import type { Service } from "../../lib/types";
import { Image } from "astro:assets";

type AboutPage = {
  title: string;
  subtitle: string;
  heroImage: ImageType;
  companyInfo: string;
  companyImage: ImageType;
  facilityInfo: string;
  facilityImage: ImageType;
};

const { data: aboutPage } = await loadQuery<AboutPage>({
  query: `*[_type == "aboutPage"][0]`,
});

const bgImageUrl = aboutPage?.heroImage
  ? urlForImage(aboutPage.heroImage).url()
  : "";

const coaches = await getAllCoaches();

const { data: services } = await loadQuery<Service[]>({
  query: `*[_type == "services"]`,
});
---

<Layout title={`${aboutPage?.title || "About"} | 5 Tool Performance`}>
  <!-- Hero Section -->
  <section
    class="relative flex min-h-[40vh] items-center bg-cover bg-fixed bg-center bg-no-repeat px-4 py-16 text-white"
    style={`background-image: linear-gradient(90deg, rgba(0,42,92,0.8) 0%, rgba(123,175,212,0.6) 100%), url('${bgImageUrl}')`}
  >
    <div class="container mx-auto">
      <div class="max-w-3xl text-center mx-auto">
        <h1
          class="text-4xl font-bold leading-tight text-white sm:text-5xl md:text-6xl"
        >
          {aboutPage?.title || "About Us"}
        </h1>
        {
          aboutPage?.subtitle && (
            <p class="mt-4 text-xl text-blue-100 md:text-2xl">
              {aboutPage.subtitle}
            </p>
          )
        }
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <main class="bg-white">
    <!-- Company Info Section -->
    <section class="py-16 md:py-24">
      <div class="container mx-auto px-4">
        <div class="mx-auto max-w-5xl">
          <div class="grid gap-12 md:grid-cols-2 md:items-center">
            <div class="space-y-6">
              <div class="space-y-4">
                <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl">
                  Our Company
                </h2>
                <div class="h-1.5 w-20 bg-carolina"></div>
              </div>
              <div class="prose max-w-none text-gray-600">
                {
                  aboutPage?.companyInfo && (
                    <p class="text-lg leading-relaxed">
                      {aboutPage.companyInfo}
                    </p>
                  )
                }
              </div>
            </div>
            {
              aboutPage?.companyImage && (
                <div class="overflow-hidden rounded-xl shadow-2xl transition-all duration-500 hover:shadow-xl">
                  <Image
                    src={urlForImage(aboutPage.companyImage).url()}
                    alt={aboutPage.companyImage?.alt || "Company Image"}
                    class="h-full w-full object-cover"
                    loading="lazy"
                    inferSize
                  />
                </div>
              )
            }
          </div>
        </div>
      </div>
    </section>

    <!-- Facility Info Section -->
    <section class="bg-gray-50 py-16 md:py-24">
      <div class="container mx-auto px-4">
        <div class="mx-auto max-w-5xl">
          <div class="grid gap-12 md:grid-cols-2 md:items-center">
            {
              aboutPage?.facilityImage && (
                <div class="order-1">
                  <div class="overflow-hidden rounded-xl shadow-2xl transition-all duration-500 hover:shadow-xl">
                    <Image
                      src={urlForImage(aboutPage.facilityImage).url()}
                      alt={aboutPage.facilityImage?.alt || "Facility Image"}
                      class="h-full w-full object-cover"
                      loading="lazy"
                      inferSize
                    />
                  </div>
                </div>
              )
            }
            <div class="order-2 space-y-6 md:order-1">
              <div class="space-y-4">
                <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl">
                  Our Facility
                </h2>
                <div class="h-1.5 w-20 bg-carolina-500"></div>
              </div>
              <div class="prose max-w-none text-gray-600">
                {
                  aboutPage?.facilityInfo && (
                    <p class="text-lg leading-relaxed">
                      {aboutPage.facilityInfo}
                    </p>
                  )
                }
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Coaches Section -->
    <section class="py-16 bg-navy text-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold sm:text-4xl mb-4">Meet Our Coaches</h2>
          <div class="h-1.5 w-20 bg-carolina mx-auto"></div>
        </div>

        <!-- Coach Carousel -->
        <div class="relative max-w-6xl mx-auto">
          <CoachCarousel coaches={coaches} />
        </div>
      </div>
    </section>
    <!-- Services Section -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold sm:text-4xl mb-4">Our Services</h2>
          <div class="h-1.5 w-20 bg-carolina mx-auto"></div>
        </div>

        <!-- Services Grid -->
        <div class="grid grid-cols-1 md:grid-cols-1 lg:grid-cols-2 gap-8">
          {services.map((service) => <ServicesCard {...service} />)}
        </div>
      </div>
    </section>
  </main>
</Layout>
