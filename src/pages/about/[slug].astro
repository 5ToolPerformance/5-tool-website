---
// ./src/pages/about/[slug].astro
import type { SanityDocument } from "@sanity/client";
import { loadQuery } from "../../lib/load-query";
import { urlForImage } from "../../lib/urlForImage";
import Layout from "../../layouts/Layout.astro";
import type { Coach } from "../../lib/types";
import { getCompanyInformation } from "../../lib/companyInformation";
export const prerender = true;

export async function getStaticPaths() {
  const { data: coaches } = await loadQuery<SanityDocument[]>({
    query: `*[_type == "coach"]`,
  });

  return coaches.map(({ slug }) => {
    return {
      params: {
        slug: slug.current,
      },
    };
  });
}

const { params } = Astro;
const { data: coach } = await loadQuery<Coach>({
  query: `*[_type == "coach" && slug.current == $slug][0]`,
  params,
});
const { data: companyInformation } = await getCompanyInformation();

const imageUrl = coach?.image ? urlForImage(coach.image).url() : "";
---

<Layout seo={companyInformation?.seo} siteUrl="https://www.5tool.com">
  {/* Top Section: Image (1/3) | Name/Title/About (2/3) */}
  <section class="py-12 bg-navy-800 text-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 items-start">
        {
          imageUrl && (
            <div class="md:col-span-1">
              <img
                src={imageUrl}
                alt={coach?.name}
                class="w-full h-auto object-cover"
              />
            </div>
          )
        }
        <div class="md:col-span-2">
          <h1 class="text-4xl md:text-5xl font-bold">{coach?.name}</h1>
          <p class="mt-2 text-xl text-white/80 font-medium">{coach?.title}</p>
          {
            coach?.description && (
              <div class="mt-6 whitespace-pre-line leading-relaxed text-white/90">
                {coach.description}
              </div>
            )
          }

          {/* Philosophy underneath About */}
          <div class="mt-10">
            <h2 class="text-2xl font-bold mb-3">Coaching Philosophy</h2>
            {
              coach?.philosophy ? (
                <div class="prose max-w-none whitespace-pre-line leading-relaxed text-white/90">
                  {coach.philosophy}
                </div>
              ) : (
                <p class="text-white/70 italic">
                  Philosophy information coming soon.
                </p>
              )
            }
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* Bottom Section: Expertise full-width */}
  <section class="py-8 bg-carolina text-navy">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold mb-6">Areas of Expertise</h2>
      {
        coach?.expertise?.length > 0 ? (
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
            {coach.expertise.map((item: string) => (
              <div class="flex items-start">
                <svg
                  class="h-5 w-5 text-navy mr-2 mt-1"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"
                  />
                </svg>
                <span class="text-navy-900">{item}</span>
              </div>
            ))}
          </div>
        ) : (
          <p class="text-navy/80 italic">No expertise information available.</p>
        )
      }
    </div>
  </section>
</Layout>
