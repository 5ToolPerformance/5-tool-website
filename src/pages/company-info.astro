---
import Layout from "../layouts/Layout.astro";
import { loadQuery } from "../lib/load-query";
import type { CompanyInfoPageType } from "../lib/types";
import { PortableText } from "astro-portabletext";

const { data: companyInfoPage } = await loadQuery<CompanyInfoPageType>({
  query: `*[_type == "companyInfoPage"][0]`,
});
---

<Layout seo={companyInfoPage?.seo} siteUrl="https://www.5tool.com">
  <div class="container mx-auto px-4 py-8">
    <PortableText value={companyInfoPage?.companyInfo} />
  </div>
</Layout>
