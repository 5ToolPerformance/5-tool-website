---
// ./src/pages/services/[slug].astro
import type { SanityDocument } from "@sanity/client";
import { loadQuery } from "../../lib/load-query";
import { urlForImage } from "../../lib/urlForImage";
import Layout from "../../layouts/Layout.astro";
import type { Service } from "../../lib/types";
import { Image } from "astro:assets";
export const prerender = true;

// Fetch all services for static paths
export async function getStaticPaths() {
  const { data: services } = await loadQuery<SanityDocument[]>({
    query: `*[_type == "services"]`,
  });

  return services.map(({ slug }) => ({
    params: { slug: slug.current },
  }));
}

// Get the current service data
const { params } = Astro;
const { data: service } = await loadQuery<
  Service & { description?: string; price?: string }
>({
  query: `*[_type == "services" && slug.current == $slug][0]{
    ...
  }`,
  params,
});

// Generate image URL if available
const imageUrl = service?.image ? urlForImage(service.image).url() : "";

// Define color variables
const colors = {
  carolina: "#4B9CD3",
  navy: "#002D62",
  lightBg: "#F8FAFC",
  subtleGradient: "linear-gradient(135deg, #F0F9FF 0%, #F8FAFC 100%)",
};
---

<Layout title={`${service?.name || "Service"} | 5 Tool Performance`}>
  <main class="min-h-screen py-12 px-4 sm:px-6 lg:px-8 bg-[#F8FAFC]">
    <div class="max-w-7xl mx-auto">
      {/* Hero Section */}
      <div
        class="relative overflow-hidden rounded-2xl shadow-xl mb-12 bg-gradient-to-b from-[#F0F9FF] to-[#F8FAFC]"
      >
        <div
          class="absolute inset-0 bg-gradient-to-r from-carolina-300 to-carolina-500 opacity-10"
        >
        </div>
        <div
          class="relative px-6 py-12 sm:py-16 lg:px-16 flex flex-col md:flex-row items-center"
        >
          {
            imageUrl && (
              <div class="md:w-1/3 lg:w-1/2 mb-8 md:mb-0 md:pr-8">
                <Image
                  src={imageUrl}
                  alt={service?.image?.alt || service?.name}
                  class="rounded-xl shadow-lg w-full h-auto max-w-md mx-auto"
                  loading="lazy"
                  inferSize
                />
              </div>
            )
          }
          <div
            class={`${imageUrl ? "md:w-2/3 lg:w-1/2" : "w-full"} text-center md:text-left`}
          >
            <h1 class="text-4xl md:text-5xl font-bold mb-4 text-navy">
              {service?.name}
            </h1>
            {
              service?.title && (
                <h2 class="text-2xl md:text-3xl font-semibold mb-6 text-carolina">
                  {service.title}
                </h2>
              )
            }
            {
              service?.shortDescription && (
                <p class="text-lg text-gray-700 mb-6 max-w-3xl mx-auto md:mx-0">
                  {service.shortDescription}
                </p>
              )
            }
            {
              service?.price && (
                <div class="inline-block px-6 py-3 rounded-full font-bold text-white bg-gradient-to-br from-carolina-300 to-carolina-500">
                  Starting at {service.price}
                </div>
              )
            }
          </div>
        </div>
      </div>

      {/* Description Section */}
      {
        service?.description && (
          <div class="bg-white rounded-2xl shadow-lg p-8 mb-12 hover:shadow-xl transition-shadow duration-300">
            <h2 class="text-3xl font-bold mb-6 text-navy border-b-2 border-carolina pb-2 inline-block">
              Service Details
            </h2>
            <div class="prose prose-lg max-w-none text-gray-700">
              {service.description.split("\n").map((paragraph) => (
                <p class="mb-4">{paragraph}</p>
              ))}
            </div>
          </div>
        )
      }

      {/* CTA Section */}
      <div class="text-center py-12">
        <h2 class="text-3xl font-bold mb-6 text-navy">Ready to Get Started?</h2>
        <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
          Contact us today to learn more about our {service?.name.toLowerCase()}
          services and how we can help you achieve your goals.
        </p>
        <a
          href="/contact"
          class="inline-block px-8 py-4 rounded-md font-bold text-white text-lg shadow-lg hover:shadow-xl transition-all duration-300 bg-gradient-to-br from-carolina-300 to-carolina-500"
        >
          Get in Touch
        </a>
      </div>
    </div>
  </main>
</Layout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .prose {
    line-height: 1.7;
  }

  .prose p:not(:last-child) {
    margin-bottom: 1.25em;
  }

  .animate-fade-in {
    animation: fadeIn 0.6s ease-out forwards;
  }
</style>
