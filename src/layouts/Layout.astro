---
import Header from "../components/Header.astro";
import TickerTape from "../components/TickerTape.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

const tickerItems = [
  { _key: "1", text: "Latest News: Check out our new feature!" },
  { _key: "2", text: "Special Offer: 20% off for new members" },
  { _key: "3", text: "Upcoming Event: Join us next week" },
  { _key: "4", text: "Latest News: Check out our new feature!" },
  { _key: "5", text: "Special Offer: 20% off for new members" },
  { _key: "6", text: "Upcoming Event: Join us next week" },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>5 Tool Performance</title>
  </head>
  <body>
    <Header />
    <TickerTape items={tickerItems} />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
