---
interface Props {
  title: string;
  items: string[];
}

const { title, items } = Astro.props;
---

<div class="bg-navy-500 text-white py-3 overflow-hidden">
  <div class="flex items-center whitespace-nowrap animate-marquee">
    <div class="inline-flex items-center mx-12">
      <span class="text-lg font-bold">{title}</span>
    </div>
    {
      items.map((item) => (
        <div class="inline-flex items-center">
          <span class="text-carolina-400 mx-3">•</span>
          <span class="text-carolina-400 font-medium">{item}</span>
        </div>
      ))
    }
    <div class="inline-flex items-center mx-12">
      <span class="text-lg font-bold">{title}</span>
    </div>
    {
      items.map((item) => (
        <div class="inline-flex items-center">
          <span class="text-carolina-400 mx-3">•</span>
          <span class="text-carolina-400 font-medium">{item}</span>
        </div>
      ))
    }
  </div>
</div>

<style>
  @keyframes marquee {
    0% {
      transform: translateX(50%);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .animate-marquee {
    display: inline-block;
    animation: marquee 30s linear infinite;
    will-change: transform;
  }

  .animate-marquee:hover {
    animation-play-state: paused;
  }

  /* Duplicate items for seamless looping */
  .animate-marquee::after {
    content: attr(data-content);
    display: inline-block;
    padding-left: 100%;
  }
</style>
