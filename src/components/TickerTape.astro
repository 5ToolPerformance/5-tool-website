---
interface Props {
  items: Array<{
    _key: string;
    text: string;
  }>;
}

const { items } = Astro.props;
---

<div class="bg-navy-500 text-white py-3 overflow-hidden">
  <div class="flex items-center whitespace-nowrap animate-marquee">
    {
      items.map((item) => (
        <div class="inline-flex items-center mx-12">
          <span class="text-carolina-400 mr-3">â€¢</span>
          <span class="text-carolina-400 font-medium">{item.text}</span>
        </div>
      ))
    }
  </div>
</div>

<style>
  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .animate-marquee {
    display: inline-block;
    animation: marquee 20s linear infinite;
    will-change: transform;
  }

  .animate-marquee:hover {
    animation-play-state: paused;
  }

  /* Duplicate items for seamless looping */
  .animate-marquee::after {
    content: attr(data-content);
    display: inline-block;
    padding-left: 100%;
  }
</style>
