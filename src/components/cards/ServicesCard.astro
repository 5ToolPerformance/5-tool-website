---
import type { ServicesType } from "../../lib/types";
import { urlForImage } from "../../lib/urlForImage";

type Props = ServicesType;

const { image, title, shortDescription, pricingInfo }: Props =
  Astro.props as Props;
const imageUrl = image ? urlForImage(image).width(400).height(400).url() : "";
---

<article
  class="flex flex-col w-full md:flex-row md:flex-wrap gap-6 p-6 rounded-lg shadow-lg bg-white hover:shadow-xl transition-shadow duration-300 border border-gray-100 max-w-4xl mx-auto"
>
  <!-- Image -->
  <!-- Image -->
  <div class="md:w-1/2 lg:w-2/5">
    <img
      src={imageUrl}
      alt={title}
      class="w-full h-64 object-cover rounded-lg"
      loading="lazy"
    />
  </div>

  <!-- Content -->
  <div class="flex-1 flex flex-col">
    <div class="flex-1">
      <h3 class="text-2xl font-bold text-navy mb-4">{title}</h3>
      <p class="text-gray-600 text-base leading-relaxed">{shortDescription}</p>
    </div>
  </div>

  {
    pricingInfo && pricingInfo.length > 0 && (
      <div class="w-full md:basis-full mt-2 pt-6 border-t border-gray-100">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
          {pricingInfo.map((item) => (
            <div class="flex flex-col items-center justify-center text-center gap-3 p-4 rounded-md border border-gray-100 bg-gray-50">
              <div>
                <p class="text-navy font-semibold">{item.title}</p>
                <p class="text-carolina text-lg font-bold mt-1">{item.price}</p>
              </div>
              <a
                href={item.link}
                class="inline-flex items-center justify-center px-4 py-2 bg-navy text-white rounded-md hover:bg-opacity-90 transition-all duration-200 text-sm font-medium hover:shadow-md text-center"
              >
                Learn More
              </a>
            </div>
          ))}
        </div>
      </div>
    )
  }
</article>
