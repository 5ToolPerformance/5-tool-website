---
import type { ServicesType } from "../../lib/types";
import { urlForImage } from "../../lib/urlForImage";

type Props = ServicesType;

const { image, title, shortDescription, pricingInfo, slug }: Props =
  Astro.props as Props;
const imageUrl = image ? urlForImage(image).width(400).height(400).url() : "";
---

<article
  class="flex flex-col w-full md:flex-row md:flex-wrap gap-6 p-6 bg-white border border-gray-100 max-w-4xl mx-auto"
>
  <!-- Image -->
  <!-- Image -->
  <div class="md:w-1/2 lg:w-2/5">
    <img
      src={imageUrl}
      alt={title}
      class="w-full h-64 object-cover"
      loading="lazy"
    />
  </div>

  <!-- Content -->
  <div class="flex-1 flex flex-col">
    <div class="flex-1">
      <a href={`/services/${slug}`}>
        <h3
          class="text-2xl font-bold text-navy mb-4 hover:text-carolina transition-colors"
        >
          {title}
        </h3>
      </a>
      <p class="text-gray-600 text-base leading-relaxed">{shortDescription}</p>
    </div>
  </div>

  {
    pricingInfo && pricingInfo.length > 0 && (
      <div class="w-full md:basis-full mt-1 pt-3">
        <div class="flex flex-col divide-y divide-gray-200">
          {pricingInfo.map((item) => (
            <div class="grid grid-cols-12 items-center py-3">
              <p class="col-span-6 text-navy text-sm font-medium">
                {item.title}
              </p>
              <p class="col-span-3 text-center text-carolina text-sm font-semibold">
                {item.price}
              </p>
              <a
                href={item.link}
                class="col-span-3 justify-self-end inline-flex items-center justify-center px-3 py-1.5 bg-navy text-white rounded-none hover:bg-opacity-90 transition-colors duration-200 text-sm font-medium"
              >
                Schedule Now
              </a>
            </div>
          ))}
        </div>
      </div>
    )
  }
</article>
