---
import type { ImageType } from "../../lib/types";
import { urlForImage } from "../../lib/urlForImage";
import { Image } from "astro:assets";

interface Props {
  title: string;
  description: string;
  image: ImageType;
  cta: {
    buttonText: string;
    buttonLink: string;
  };
}

const { title, description, image, cta } = Astro.props;
const imageUrl = image ? urlForImage(image).url() : "";
---

<article
  class="relative bg-transparent rounded-none overflow-hidden group border border-white"
>
  {
    imageUrl && (
      <div class="h-48 overflow-hidden">
        <Image
          src={imageUrl}
          alt={title}
          class="w-full h-full object-cover"
          width={400}
          height={200}
          loading="lazy"
        />
      </div>
    )
  }
  <div class="p-6">
    <h3
      class="text-xl font-bold text-white mb-2 hover:text-carolina transition-colors"
    >
      {title}
    </h3>
    <p class="text-white mb-6">{description}</p>
    {
      cta?.buttonLink && cta?.buttonText && (
        <a
          href={cta.buttonLink}
          class="inline-block px-6 py-2 border border-white bg-navy text-white font-medium rounded-none hover:bg-white hover:text-navy transition-colors duration-200"
          target="_blank"
          rel="noopener noreferrer"
        >
          {cta.buttonText}
        </a>
      )
    }
  </div>
</article>
