---
import { getAllCoaches } from "../../lib/coachesHelper";
import CoachCarousel from "../CoachCarousel.astro";
// Fetch all coaches
const coaches = await getAllCoaches();
---

<section class="relative py-20 sm:py-28 overflow-hidden">
  <!-- Decorative background elements -->
  <div class="absolute inset-0 bg-gradient-to-b from-navy-600 to-navy-700 -z-10">
    <div class="absolute inset-0 bg-[url('/images/pattern-dark.svg')] opacity-5"></div>
  </div>
  
  <!-- Main content -->
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold text-white sm:text-4xl md:text-5xl mb-4">Meet Our Coaches</h2>
      <div class="w-20 h-1 bg-carolina-400 mx-auto mb-6"></div>
      <p class="text-lg text-carolina-100 max-w-3xl mx-auto">
        Our team of experienced coaches is dedicated to helping you achieve your athletic goals through personalized training and expert guidance.
      </p>
    </div>
    
    <CoachCarousel coaches={coaches} />
  </div>
  
  <!-- Decorative elements -->
  <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-carolina-400 via-carolina-300 to-navy-500"></div>
  <div class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-navy-500 via-carolina-300 to-carolina-400"></div>
</section>
