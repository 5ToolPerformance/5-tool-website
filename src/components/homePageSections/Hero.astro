---
import type { ImageType } from "../../lib/types";
import { urlForImage } from "../../lib/urlForImage";

export interface Props {
  title: string;
  description: string;
  image: ImageType;
  cta1: {
    buttonText: string;
    buttonLink: string;
  };
  cta2: {
    buttonText: string;
    buttonLink: string;
  };
}

const { title, image, cta1, cta2, description } = Astro.props;
const bgImageUrl = image ? urlForImage(image).url() : "";
---

<section
  class="relative flex min-h-[90vh] w-full"
  style={`background: url('${bgImageUrl}') no-repeat center center; background-size: cover;`}
>
  <div class="absolute inset-0 bg-carolina-900/50"></div>

  <div class="relative w-full flex items-center">
    <div class="w-full md:w-1/2 bg-navy-900 p-8 md:p-16">
      <div class="max-w-2xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
          {title}
        </h1>

        {
          description && (
            <p class="text-lg md:text-xl text-white/90 mb-8 leading-relaxed">
              {description}
            </p>
          )
        }

        <div class="flex flex-col sm:flex-row gap-4">
          {
            cta1 && (
              <a
                href={cta1.buttonLink}
                class="inline-block bg-carolina hover:bg-carolina-800 text-navy font-semibold py-3 px-8 text-center"
              >
                {cta1.buttonText}
              </a>
            )
          }

          {
            cta2 && (
              <a
                href={cta2.buttonLink}
                class="inline-block bg-white/10 hover:bg-white/20 text-white font-semibold py-3 px-8 text-center border border-white/20"
              >
                {cta2.buttonText}
              </a>
            )
          }
        </div>
      </div>
    </div>

    <div class="hidden md:block w-1/2">
      <!-- Empty space for the image background on the right side -->
    </div>
  </div>

  <!-- Simple scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2">
    <div class="h-10 w-6 flex items-center justify-center">
      <div class="h-3 w-0.5 bg-white/70"></div>
    </div>
  </div>
</section>
