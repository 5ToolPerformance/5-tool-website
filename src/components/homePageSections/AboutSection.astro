---
import type { ImageType } from '../../lib/types';
import { urlForImage } from '../../lib/urlForImage';
import { Image } from 'astro:assets';
export interface Props {
  title: string;
  description: string;
  image: ImageType;
  cta: {
    buttonText: string;
    buttonLink: string;
  };
}

const { title, image, cta, description } = Astro.props;
---

<section class="py-16 md:py-24 bg-gradient-to-br from-carolina-50 via-carolina-100 to-carolina-50">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row items-center gap-8 md:gap-12">
      <!-- Image on left (top on mobile) -->
      <div class="w-full md:w-1/2">
        <Image 
          src={urlForImage(image).url()} 
          alt={image.alt}
          class="w-full h-auto rounded-xl shadow-xl object-cover transition-all duration-500 hover:shadow-carolina-200/50 border-2 border-carolina-200 hover:border-carolina-300"
          loading="lazy"
          width={1000}
          height={1000}
        />
      </div>
      
      <!-- Content on right (bottom on mobile) -->
      <div class="w-full md:w-1/2">
        <h2 class="text-3xl md:text-4xl font-bold text-navy-700 mb-6">
          {title}
        </h2>
        <p class="text-lg text-navy-800 mb-8 leading-relaxed">
          {description}
        </p>
        <a 
          href={cta.buttonLink}
          class="inline-block bg-navy-700 hover:bg-navy-800 text-white font-semibold py-3 px-8 rounded-lg transition-all duration-300 transform hover:scale-105 shadow-md hover:shadow-navy-500/30 border-2 border-carolina-200 hover:border-carolina-300"
        >
          {cta.buttonText}
        </a>
      </div>
    </div>
  </div>
</section>