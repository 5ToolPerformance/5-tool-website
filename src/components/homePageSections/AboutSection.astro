---
import type { ImageType } from '../../lib/types';
import { urlForImage } from '../../lib/urlForImage';
import { Image } from 'astro:assets';
export interface Props {
  title: string;
  description: string;
  image: ImageType;
  cta: {
    buttonText: string;
    buttonLink: string;
  };
}

const { title, image, cta, description } = Astro.props;
---

<section class="w-full bg-carolina min-h-[50vh] md:min-h-[60vh] flex items-center">
  <div class="flex flex-col md:flex-row w-full h-full">
    <!-- Image on left (top on mobile) -->
    <div class="w-full md:w-1/2 h-full">
      <Image 
        src={urlForImage(image).url()} 
        alt={image.alt}
        class="w-full h-full object-cover"
        loading="lazy"
        width={1000}
        height={1000}
      />
    </div>
    
    <!-- Content on right (bottom on mobile) -->
    <div class="w-full md:w-1/2 p-8 md:p-16 flex flex-col justify-center h-full">
      <div class="max-w-2xl mx-auto w-full">
        <h2 class="text-3xl md:text-4xl font-bold text-navy-700 mb-6 md:mb-8">
          {title}
        </h2>
        <p class="text-lg md:text-xl text-navy-800 mb-8 md:mb-12 leading-relaxed md:leading-8 space-y-4">
          {description}
        </p>
        <div class="mt-auto">
          <a 
            href={cta.buttonLink}
            class="inline-block bg-navy-700 hover:bg-navy-800 text-white font-semibold py-4 px-10 text-lg transition-colors duration-200"
          >
            {cta.buttonText}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>