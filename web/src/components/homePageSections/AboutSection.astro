---
import type { Image } from '../../lib/types';
import { urlForImage } from '../../lib/urlForImage';

export interface Props {
  title: string;
  description: string;
  image: Image;
  cta: {
    buttonText: string;
    buttonLink: string;
  };
}

const { title, image, cta, description } = Astro.props;
---

<section class="py-16 md:py-24 bg-white">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row items-center gap-8 md:gap-12">
      <!-- Image on left (top on mobile) -->
      <div class="w-full md:w-1/2">
        <img 
          src={urlForImage(image).url()} 
          alt={image.alt}
          class="w-full h-auto rounded-lg shadow-lg object-cover"
          loading="lazy"
        />
      </div>
      
      <!-- Content on right (bottom on mobile) -->
      <div class="w-full md:w-1/2">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
          {title}
        </h2>
        <p class="text-lg text-gray-600 mb-8 leading-relaxed">
          {description}
        </p>
        <a 
          href={cta.buttonLink}
          class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-8 rounded-lg transition duration-300"
        >
          {cta.buttonText}
        </a>
      </div>
    </div>
  </div>
</section>